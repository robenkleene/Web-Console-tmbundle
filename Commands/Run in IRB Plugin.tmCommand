<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>nop</string>
	<key>command</key>
	<string>#!/System/Library/Frameworks/Ruby.framework/Versions/2.0/usr/bin/ruby

require File.join(ENV['TM_BUNDLE_SUPPORT'], 'bundle/bundler/setup')
require 'webconsole'

file_path = ENV["TM_FILEPATH"]
if file_path
  directory = File.dirname(file_path)
else
  directory = Dir.pwd
end

text = STDIN.read
text.gsub!("\n", "\uFF00") # \uFF00 is the unicode character Coffee uses for new lines, it's used here just to consolidate code into one line
text = text + "\n"

PLUGIN_NAME = "IRB"

# Create a window running the plugin if it doesn't exist
if !WebConsole::plugin_has_windows(PLUGIN_NAME)
  WebConsole::run_plugin(PLUGIN_NAME, directory)
end

WebConsole::plugin_read_from_standard_input(PLUGIN_NAME, text)</string>
	<key>input</key>
	<string>selection</string>
	<key>inputFormat</key>
	<string>text</string>
	<key>keyEquivalent</key>
	<string>^@R</string>
	<key>name</key>
	<string>Run in IRB Plugin</string>
	<key>outputCaret</key>
	<string>afterOutput</string>
	<key>outputFormat</key>
	<string>text</string>
	<key>outputLocation</key>
	<string>toolTip</string>
	<key>scope</key>
	<string>source.ruby</string>
	<key>uuid</key>
	<string>F6036921-F945-47F6-8252-9AB81CA46998</string>
	<key>version</key>
	<integer>2</integer>
</dict>
</plist>
